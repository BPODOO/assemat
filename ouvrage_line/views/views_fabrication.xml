<odoo>
    <data>
        <record id="fabrication_tree_bp" model="ir.ui.view">
            <field name="name">fabrication.tree.bp</field>
            <field name="model">fabrication</field>
            <field name="arch" type="xml">
                <tree editable="top" create="0" delete="1" edit="true">
                    <field name="name"/>
                    <field name="bp_sale_order_id"/>
                    <field name="bp_sale_order_line_id"/>
                    <field name="bp_ouvrage_line_id"/>
                    <field name="bp_duration"/>
                    <field name="bp_cost"/>
                </tree>
            </field>
        </record>
        
        <record id="action_fabrication" model="ir.actions.act_window">
            <field name="name">Lignes de fabrication</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">fabrication</field>
            <field name="view_mode">list</field>
        </record>

        <!-- Action Menu Item Related To Above Action Window -->
        <menuitem id="action_menu_fabrication" 
            action="action_fabrication" 
            parent="sale.sale_menu_root"
            name="Lignes de fabrication" 
            sequence="100"/>
    </data>
</odoo>