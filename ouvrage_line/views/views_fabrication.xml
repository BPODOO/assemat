<odoo>
    <data>
        <record id="fabrication_tree_bp" model="ir.ui.view">
            <field name="name">fabrication.tree.bp</field>
            <field name="model">fabrication</field>
            <field name="arch" type="xml">
                <tree create="0" delete="0" edit="0" editable="bottom">
                    <field name="name" />
                    <field name="bp_timesheet_description_id" readonly="1" optional="hide"/>
                    <field name="bp_sale_order_id" options="{'no_open': True}" optional="hide"/>
                    <field name="bp_sale_order_line_id" options="{'no_open': True}" optional="hide"/>
                    <field name="bp_ouvrage_line_id" options="{'no_open': True}" optional="hide"/>
                    <field name="bp_unit_duration" widget="float_time" optional="show"/>
                    <field name="bp_qty" optional="show"/>
                    <field name="bp_duration" widget="float_time" optional="show"/>
                    <field name="bp_cost" optional="show"/>
                </tree>
            </field>
        </record>
        
        <record id="action_fabrication" model="ir.actions.act_window">
            <field name="name">Lignes de fabrication</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">fabrication</field>
            <field name="view_mode">list</field>
        </record>

        <menuitem id="action_menu_fabrication" 
            action="action_fabrication" 
            parent="ouvrage_line.menu_ouvrage"
            name="Lignes de fabrication" 
            sequence="3"/>
        
        
        <!--         VUE DE RECHERCHE -->
        <record id="view_fabrication_search_bp" model="ir.ui.view">
            <field name="name">fabrication.search.bp</field>
            <field name="model">fabrication</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name" filter_domain="[('name', 'ilike', self)]"/>
                    <field name="bp_sale_order_id" filter_domain="[('bp_sale_order_id', 'ilike', self)]"/>
                    <field name="bp_sale_order_line_id" filter_domain="[('bp_sale_order_line_id', 'ilike', self)]"/>
                </search>
            </field>
        </record>
    </data>
</odoo>