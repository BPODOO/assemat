<odoo>
    <data>
        <record id="material_line_tree_bp" model="ir.ui.view">
            <field name="name">material.line.tree.bp</field>
            <field name="model">material.line</field>
            <field name="arch" type="xml">
                <tree editable="top" create="0" delete="1" edit="true">
                    <field name="name"/>
                    <field name="bp_sale_order_id"/>
                    <field name="bp_sale_order_line_id"/>
                    <field name="bp_ouvrage_line_id"/>
                    <field name="bp_product_id"/>
                    <field name="bp_qty"/>
                    <field name="bp_cost_unit"/>
                    <field name="bp_cost"/>
                </tree>
            </field>
        </record>
        
        <record id="action_material_line" model="ir.actions.act_window">
            <field name="name">Lignes de mat√©riels</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">material.line</field>
            <field name="view_mode">list</field>
        </record>

        <!-- Action Menu Item Related To Above Action Window -->
        <menuitem id="action_menu_material_line" 
            action="action_material_line" 
            parent="sale.sale_menu_root"
            name="Lignes de materiels" 
            sequence="100"/>
    </data>
</odoo>