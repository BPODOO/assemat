<odoo>
    <data>
        <record id="material_line_tree_bp" model="ir.ui.view">
            <field name="name">material.line.tree.bp</field>
            <field name="model">material.line</field>
            <field name="arch" type="xml">
                <tree editable="bottom" create="0" delete="0" edit="0">
                    <field name="name" readonly="1"/>
                    <field name="bp_characteristic" optional="show" readonly="1"/>
                    <field name="bp_sale_order_id" optional="hide" readonly="1"/>
                    <field name="bp_sale_order_line_id" optional="hide" readonly="1"/>
                    <field name="bp_ouvrage_line_id" optional="hide" readonly="1"/>
                    <field name="bp_product_id" optional="show" readonly="1"/>
                    <field name="bp_qty" optional="show" readonly="1"/>
                    <field name="bp_qty_used" optional="show" readonly="1"/>
                    <field name="bp_cost_unit" optional="show" readonly="1"/>
                    <field name="bp_cost" optional="show" readonly="1" sum="Prévisionnel du total des coûts"/>
                    <field name="bp_cost_actual" optional="show" readonly="1" sum="Total des coûts"/>
                </tree>
            </field>
        </record>
        
        <record id="action_material_line" model="ir.actions.act_window">
            <field name="name">Lignes de matériels</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">material.line</field>
            <field name="view_mode">list</field>
        </record>

        <menuitem id="action_menu_material_line" 
            action="action_material_line" 
            parent="ouvrage_line.menu_ouvrage"
            name="Lignes de materiels" 
            sequence="2"/>
        
        <!--         VUE DE RECHERCHE -->
        <record id="view_material_line_search_bp" model="ir.ui.view">
            <field name="name">material.line.search.bp</field>
            <field name="model">material.line</field>
            <field name="arch" type="xml">
                <search>
                    <field name="bp_product_id" filter_domain="[('bp_product_id', 'ilike', self)]"/>
                    <field name="bp_sale_order_id" filter_domain="[('bp_sale_order_id', 'ilike', self)]"/>
                    <field name="bp_sale_order_line_id" filter_domain="[('bp_sale_order_line_id', 'ilike', self)]"/>
                    <field name="bp_characteristic" filter_domain="[('bp_characteristic','ilike',self)]"/>
                </search>
            </field>
        </record>
    </data>
</odoo>