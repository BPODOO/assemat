<odoo>
    <data>
        <record id="ouvrage_lines_project_form_bp" model="ir.ui.view">
            <field name="name">ouvrage.lines.project.form.bp</field>
            <field name="model">project.project</field>
            <field name="inherit_id" ref="project.edit_project" />
            <field name="arch" type="xml">
                <xpath expr="//form[1]/sheet[1]/div[@name='button_box']/button[1]" position="before">
                    <button class="oe_stat_button" icon="fa-wrench" type="object" name="action_open_material_lines_associated">
                        <div class="o_field_widget o_stat_info">
                            <span class="o_stat_text">Suivi mat√©riel</span>
                        </div>
                    </button>
                </xpath>
                
                <xpath expr="//field[@name='tag_ids']" position="after">
                    <field name="bp_allocated_hours" widget="float_time" invisible="1"/>
                    <field name="bp_sale_order_ids" invisible="1"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>