<odoo>
    <data>
        <record id="ouvrage_line_form_bp" model="ir.ui.view">
            <field name="name">ouvrage.line.form.bp</field>
            <field name="model">ouvrage.line</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group name="group_setup">
                            <group name="group_setup_left" string="Information du devis">
                                <field name="bp_coefficient"/>
                                <field name="bp_hourly_rate"/>
                                <field name="bp_transport_cost"/>
                            </group>
                            <group name="group_setup_right" string="Informations générales">
                                <field name="bp_cost_price"/>
                                <field name="bp_selling_price"/>
                                <field name="bp_forecast_margin"/>
                            </group>
                        </group>
                        <div class="g-col-sm-2" name="div_material">
                            <div class="o_horizontal_separator mt-4 mb-3 text-uppercase fw-bolder small" name="material_area">Matériel(s)</div>
                        </div>
                        <field name="bp_material_line_ids" string="Matériels" context="{'default_bp_sale_order_id': bp_sale_order_id, 'default_bp_sale_order_line_id': bp_sale_order_line_id}">
                            <tree editable="bottom">
                                <field name="bp_product_id" string="Fourniture" domain="[['categ_id.bp_is_furniture','=',True]]"/>
                                <field name="bp_qty"/>
                                <field name="bp_cost_unit"/>
                                <field name="bp_cost" sum="Sum of Coût"/>
                                <field name="bp_sale_order_id" invisible="1"/>
                                <field name="bp_sale_order_line_id" invisible="1"/>
                            </tree>
                        </field>
                        <div class="g-col-sm-2" name="div_fabrication">
                            <div class="o_horizontal_separator mt-4 mb-3 text-uppercase fw-bolder small" name="fabrication_area">Fabrication</div>
                        </div>
                        <field name="bp_fabrication_ids" context="{'default_bp_sale_order_id': bp_sale_order_id, 'default_bp_sale_order_line_id': bp_sale_order_line_id}">
                            <tree editable="bottom">
                                <field name="name"/>
                                <field name="bp_duration" widget="float_time" sum="Sum of Durée"/>
                                <field name="bp_cost" sum="Sum of Coût"/>
                                <field name="bp_sale_order_id" invisible="1"/>
                                <field name="bp_sale_order_line_id" invisible="1"/>
                            </tree>
                        </field>
                        
                        <field name="bp_sale_order_id" invisible="1"/>
                        <field name="bp_sale_order_line_id" invisible="1"/>
                    </sheet>
                    <footer>
                        <button name="action_save" type="object" string="CONFIRMER" class="btn-primary"/>
                        <button special="cancel" string="ANNULER"/>
                    </footer>
                </form>
            </field>
        </record>
        
<!--         MENU REGROUPEMENT DES MODELES
        - ouvrage.line
        - material.line
        - fabrication -->
        <menuitem id="menu_ouvrage" 
            action="" 
            parent="sale.sale_menu_root"
            name="Ouvrage" 
            sequence="45"/>
        
        <record id="ouvrage_line_tree_bp" model="ir.ui.view">
            <field name="name">ouvrage.line.tree.bp</field>
            <field name="model">ouvrage.line</field>
            <field name="arch" type="xml">
                <tree editable="bottom" create="0" delete="0" edit="0">
                    <field name="name" optional="hide"/>
                    <field name="bp_sale_order_id"/>
                    <field name="bp_sale_order_line_id"/>
                    <field name="bp_fabrication_ids" widget="many2many_tags"/>
                    <field name="bp_material_line_ids" widget="many2many_tags"/>
                    <field name="bp_cost_price"/>
                    <field name="bp_selling_price"/>
                    <field name="bp_forecast_margin"/>
                </tree>
            </field>
        </record>
        
        <record id="action_ouvrage_line" model="ir.actions.act_window">
            <field name="name">Lignes d'ouvrages</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">ouvrage.line</field>
            <field name="view_mode">list</field>
        </record>

        <menuitem id="action_menu_ouvrage_line" 
            action="action_ouvrage_line" 
            parent="ouvrage_line.menu_ouvrage"
            name="Lignes d'ouvrages" 
            sequence="1"/>
        
        
<!--         VUE DE RECHERCHE -->
        <record id="view_ouvrage_line_search_bp" model="ir.ui.view">
            <field name="name">ouvrage.line.search.bp</field>
            <field name="model">ouvrage.line</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="bp_sale_order_id" filter_domain="[('bp_sale_order_id', 'ilike', self)]"/>
                    <field name="bp_sale_order_line_id" filter_domain="[('bp_sale_order_line_id', 'ilike', self)]"/>
                    
                    <filter name="group_by_order" string="Bon de commande" context="{'group_by': 'bp_sale_order_id'}"/>
                </search>
            </field>
        </record>
    </data>
</odoo>