<odoo>
    <data>
        <record id="material_line_associated_tree_bp" model="ir.ui.view">
            <field name="name">material.line.associated.tree.bp</field>
            <field name="model">material.line</field>
            <field name="arch" type="xml">
                <tree editable="bottom" create="1" delete="0" edit="1">
                    <field name="bp_unpredictable_line" invisible="1"/> <!--Permet de savoir si une ligne n'était pas prévue-->
                    <field name="name" optional="hide" readonly="1"/>
                    <field name="bp_characteristic" optional="show" readonly="0"/>
                    <field name="bp_sale_order_id" optional="hide" readonly="1"/>
                    <field name="bp_sale_order_line_id" optional="hide" readonly="1"/>
                    <field name="bp_ouvrage_line_id" optional="hide" readonly="1"/>
                    <field name="bp_product_id" optional="show" attrs="{'readonly': [('bp_unpredictable_line','=', False)]}"/>
                    <field name="bp_qty" optional="show" readonly="1"/>
                    <field name="bp_availability" optional="show" readonly="0"/>
                    <field name="bp_qty_used" optional="show" readonly="0"/>
                    <field name="bp_cost_unit" optional="show" attrs="{'readonly': [('bp_unpredictable_line','=', False)]}"/>
                    <field name="bp_cost_unit_real" optional="show"/>
                    <field name="bp_cost" optional="show" readonly="1" sum="Prévisionnel du total des coûts"/>
                    <field name="bp_cost_actual" optional="show" readonly="1" sum="Total des coûts"/>
                </tree>
            </field>
        </record>
    </data>
</odoo>