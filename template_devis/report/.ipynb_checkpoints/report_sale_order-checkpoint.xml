    <data>

        <record model="ir.ui.view" id="sale_report_template_devis">
            <field name="name">BP - Report Template devis</field>
            <field name="inherit_id" ref="sale.report_saleorder_document"/>
            <field name="arch" type="xml">
<!--                 <xpath expr="//div[@name='signature']" position="before">
                    <div class="row" style="page-break-inside: avoid;margin-top:1px;">
                        <div class="col" style="margin-top:45px;">
                            <table style="width: 50%;border-collapse:collapse;">
