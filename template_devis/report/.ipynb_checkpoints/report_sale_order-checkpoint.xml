<odoo>
    <data>

        <record model="ir.ui.view" id="sale_report_template_devis">
            <field name="name">BP - Report Template devis</field>
            <field name="inherit_id" ref="sale.report_saleorder_document"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='signature']" position="before">
                    <div class="row">
                        <div class="col" style="margin-top:20px;">
                            <table style="width: 50%;">
                              <tbody>
                                <tr>
                                  <td style="background-color: #9E6A45; border: solid 1px; font-weight: bolder; color: black">
                                    <span style="color: white; margin: 0px 5px 0px;">Nom</span>
                                  </td>
                                  <td style="background-color: white; border: solid 1px black; color: #9E6A45; font-weight: bolder;">
                                    <span style="margin: 0px 10px 0px;">BANQUE POPULAIRE OCCITANE</span>
                                  </td>
                                </tr>
                                <tr>
                                  <td style="background-color: #9E6A45; border: solid 1px; font-weight: bolder; color: black">
                                    <span style="color: white; margin: 0px 5px 0px;">IBAN</span>
                                  </td>
                                  <td style="background-color: white; border: solid 1px black; color: #9E6A45; font-weight: bolder;">
                                    <span style="margin: 0px 10px 0px;">FR76 1780 7006 1375 3219 4982 585</span>
                                  </td>
                                </tr>
                                <tr>
                                  <td style="background-color: #9E6A45; border: solid 1px black; font-weight: bolder; color: black">
                                    <span style="color: white; margin: 0px 5px 0px;">BIC</span>
                                  </td>
                                  <td style="background-color: white; border: solid 1px black; color: #9E6A45; font-weight: bolder;">
                                    <span style="margin: 0px 10px 0px;">CCBPFRPPTLS</span>
                                  </td>
                                </tr>
                              </tbody>
                            </table>
                        </div>
                    </div>
                </xpath>
                <xpath expr="//div[@id='informations']/div[4]" position="replace"/>
            </field>
        </record>

        <record model="ir.ui.view" id="sale_report_header">
            <field name="name">BP - Report Devis Header</field>
            <field name="inherit_id" ref="web.external_layout_boxed"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@class='row mb8']/div[1]/img" position="after">
                    <style>
                        img {
                            max-height: 150px !important;
                        }
                    </style>
                    <br/>
                    <span>
                        Téléphone : 06 28 20 47 86
                    </span>
                    <br/>
                    <span>
                        Mail : eric.assemat@gmail.com
                    </span>
                </xpath>
            </field>
        </record>

        <record model="ir.ui.view" id="sale_report_footer">
            <field name="name">BP - Report Devis Footer</field>
            <field name="inherit_id" ref="web.external_layout_boxed"/>
            <field name="arch" type="xml">
                <xpath expr="/t/div[3]/div[1]" position="replace">
                    <style>
                      p {
                        margin-bottom: 2px;
                      }
                    </style>
                    <div class="row">
                        <div class="col-3 text-center" style="padding-top: 15px;">
                            <img src="/web/image/289-0b50b4fa/garantie-decennale.png" alt="logo garantie decennale" width="90" height="60"/>
                        </div>
                        <div class="col-6 text-center">
                            <div t-field="company.report_footer"/>
                            <div t-if="report_type == 'pdf'" style="padding-top:2px">
                                Page: <span class="page"/> / <span class="topage"/>
                            </div>
                        </div>
                        <div class="col-3 text-center" style="padding-top:1px">
                            <img src="/web/image/288-3aef98b0/Qualibat.jpg" alt="logo garantie decennale" width="70" height="85"/>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>

    </data>
</odoo>