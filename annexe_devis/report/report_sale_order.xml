<odoo>
    <data>

        <record model="ir.ui.view" id="sale_report_template_devis_annexes">
            <field name="name">BP - Report Template devis Annexes</field>
            <field name="inherit_id" ref="sale.report_saleorder_document"/>
            <field name="arch" type="xml">
                <xpath expr="/t/t/div/div[5]" position="after">
                    <div>
                        <t t-foreach='doc.bp_upload_annexes' t-as="file">
                            <span t-field="file.bp_file" widget="image"/>
                        </t>
                    </div>
                </xpath>                
                <xpath expr="/t[1]/t[1]/div[1]/div[6]/t[1]/span[1]" position="attributes">
                    <attribute name="t-options-widget">"image"</attribute>
                </xpath>
            </field>
        </record>
        
    </data>
</odoo>