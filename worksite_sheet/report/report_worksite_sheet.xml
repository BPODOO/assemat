<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="report_worksite_sheet_document">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
              <head>
                 <style>
                    .left-block {
                        float: left;
                        width: 50%;
                    }

                    .right-block {
                        float: right;
                        width: 50%;
                    }
                 </style>
              </head>

              <div class="page">
                  <div class="left-block" style="background-color: lightgreen;">
                      <div class="row" style="background-color: lightblue;">
                        <div class="col-12" style="background-color: red;">
                            <div class="col-6">
                                <p>SALE LINE: <span t-esc="sale_lines"/></p>
                                <p>OUVRAGE LINE: <span t-esc="ouvrage_lines"/></p>
                                <p>PROJECT: <span t-esc="project_id.name"/></p>
                                <t t-foreach="sale_lines" t-as="line">
                                  <t t-esc="line.name"/>
                                </t>
                            </div>
                            <div class="col-6"></div>
                        </div>
                      </div>
                  </div>
                  <div class="right-block" style="background-color: red;">
                      <div class="row" style="background-color: lightblue;">
                        <div class="col-12" style="background-color: yellow;">
                            <div class="col-6">
                                <p>SALE LINE: <span t-esc="sale_lines"/></p>
                                <p>OUVRAGE LINE: <span t-esc="ouvrage_lines"/></p>
                                <p>PROJECT: <span t-esc="project_id.name"/></p>
                            </div>
                            <div class="col-6"></div>
                        </div>
                      </div>
                  </div>
              </div>
            </t>
        </t>
    </template>
</odoo>