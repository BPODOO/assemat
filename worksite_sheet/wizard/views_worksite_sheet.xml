<odoo>
  <data>
        <record id="view_print_worksite_sheet_bp" model="ir.ui.view">
            <field name="name">Impression de fiche chantier</field>
            <field name="model">print.worksite.sheet</field>
            <field name="arch" type="xml">
                 <form string="Impression de feuille atelier">
                    <group name="group_order_information">
                        <field name="bp_res_id" invisible="1"/>
                        <field name="bp_project_id" readonly="1" invisible="1"/>
                        <field name="bp_order_domain_ids" widget="many2many_tags" invisible="1"/>
                        <label for="bp_order_id" string="Bon de commande"/>
                        <div class="o_row">
                            <field name="bp_order_id" required="1"/>
                        </div>
                        <field name="bp_select_custom" string="Titre rapport" options="{'no_create_edit': True, 'no_create': True}"/>
                        <field name="bp_auto_complete_section" attrs="{'invisible': [('bp_detect_sections','=', True)]}"/>
                        <field name="bp_select_all_lines" invisible="1"/>
                        <field name="bp_detect_sections" invisible="1"/>
                    </group>
                    <group>
                      <div colspan="2" style="text-align:center">
                        <button name="select_all_lines" string=" Sélectionner les lignes" type="object" class="btn btn-primary" 
                                icon="fa-check" attrs="{'invisible': [('bp_select_all_lines','=', True)]}"/>
                        <button name="select_all_lines" string=" Désélectionner les lignes" type="object" class="btn btn-primary" 
                                icon="fa-times" attrs="{'invisible': [('bp_select_all_lines','=', False)]}"/>
                      </div>
                    </group>
                    <field name="bp_order_line" mode="tree" nolabel="1" style="width: 100%;">
                        <tree multi_edit="1" delete="0" create="0" editable="top" decoration-bf="display_type=='line_section'">
                            <field name="bp_is_select" readonly="0" force_save="1" widget="boolean_toggle"/>
                            <field name="bp_is_select_bis" widget="boolean_toggle" force_save="1" invisible="1"/>
                            <field name="name" readonly="1"/>
                            <field name="display_type" readonly="1"/>
                            <field name="bp_reload" invisible="1"/>
                        </tree>    
                    </field>
                    <footer>
                        <button name="action_print_report_worksite" string="IMPRIMER FEUILLE" type="object" class="btn-primary"/>
                        <button name="close_button" string="ANNULER" type="object" class="btn-secondary"/>
                    </footer>
                </form>
            </field>
        </record>
      
        <record id="action_server_print_worksite_sheet_bp" model="ir.actions.server">
            <field name="name">Feuille Atelier</field>
            <field name="model_id" ref="model_project_project"/>
            <field name="state">code</field>
            <field name="code">
                if records:
                    action = records.action_open_print_worksite_sheet()
            </field>
            <field name="binding_model_id" ref="project.model_project_project"/>
        </record>
  </data>
</odoo>