<odoo>
  <data>
        <record id="action_open_sale_associated" model="ir.actions.act_window">
            <field name="name">Devis associés</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">sale.order</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'default_bp_worksite': active_id}</field>
            <field name="domain">[('bp_worksite','=', active_id)]</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Créer votre premier devis !
                </p>
            </field>
        </record>
      
        <record id="bp_sale_smart_button" model="ir.ui.view">
            <field name="name">bp.sale.smart.button</field>
            <field name="model">project.project</field>
            <field name="inherit_id" ref="project.edit_project" />
            <field name="arch" type="xml">
                <xpath expr="//form[1]/sheet[1]/div[@name='button_box']" position="inside">
                    <button class="oe_stat_button" icon="fa-credit-card" type="action" name="%(assemat_fields.action_open_sale_associated)d">
                        <div class="o_field_widget o_stat_info">
                            <span class="o_stat_value"><field name="bp_sale_count" widget="statinfo" nolabel="1"/></span>
                            <span class="o_stat_text">Devis associés</span>
                        </div>
                    </button>
                    
                    <button class="oe_stat_button" name="action_show_timesheets_by_employee_invoice_type" type="object" icon="fa-clock-o" attrs="{'invisible': [('allow_timesheets', '=', False)]}">
                        <div class="o_field_widget o_stat_info">
                            <div class="oe_inline">
                                <span class="o_stat_value mr-1">
                                    <field name="total_timesheet_time" widget="statinfo" nolabel="1"/>
                                </span>
                                <span class="o_stat_value">
                                    <field name="timesheet_encode_uom_id" class="o_stat_text" options="{'no_open' : True}"/>
                                </span>
                            </div>
                            <span class="o_stat_text">Enregistrée</span>
                        </div>
                    </button>
                    
                    <button class="oe_stat_button" type="object" name="action_view_analytic_account_entries" icon="fa-usd" attrs="{'invisible': [('analytic_account_id', '=', False)]}" groups="analytic.group_analytic_accounting">
                        <div class="o_form_field o_stat_info">
                            <span class="o_stat_value">
                                <field name="analytic_account_balance"/>
                            </span>
                            <span class="o_stat_text">Marge brute</span>
                        </div>
                    </button>
                </xpath>
            </field>
        </record>

    </data>
</odoo>